@model Lanche
<!-- Sua div aqui com class="col-4" -->
<div class="col-4">
    <p><img src="@Model.ImagemUrl" class="img-fluid" /></p>
    <h3>Preço: @Model.Preco.ToString("c")</h3>

    <a asp-controller="Lanche" asp-action="Details" asp-route-lancheId="@Model.Id">@Model.Nome</a>

    <p>@Model.DescricaoCurta</p>
    <p class="button">
        <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
           asp-action="AdicionarItemNoCarrinho" asp-route-LancheId="@Model.Id">Incluir no Carrinho</a>
    </p>
</div>
<!-- Outras colunas ou divs podem estar aqui -->